<%= simple_form_for(@tuit) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :tuit, label: "Tuite about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tuit here...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
